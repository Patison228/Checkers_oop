<Window x:Class="CheckersClient.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шашки Онлайн" Height="750" Width="850"
        WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="800">

    <Window.Resources>
        <!-- Стиль кнопки шашки -->
        <Style x:Key="CheckerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                CornerRadius="5"
                                BorderBrush="Gray" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F8FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="{Binding CurrentPlayer}" 
                       FontSize="24" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
            <TextBlock Text="{Binding RoomId}" 
                       FontSize="16" FontWeight="SemiBold" 
                       Foreground="Blue" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Статус -->
        <Border Grid.Row="1" Background="LightGray" Padding="15" Margin="20" CornerRadius="5">
            <TextBlock Text="{Binding Status}" 
                       FontSize="14" TextWrapping="Wrap" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Игровое поле -->
        <Border Grid.Row="2" Margin="20" BorderBrush="Black" BorderThickness="4" CornerRadius="10">
            <Grid Background="#D2B48C">
                <UniformGrid Rows="8" Columns="8">
                    <ItemsControl ItemsSource="{Binding Board}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="8" Columns="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource CheckerButtonStyle}"
                                        Background="{Binding Background}"
                                        Command="{Binding DataContext.CellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Row}">

                                    <!-- Шашка (круг) -->
                                    <Ellipse Width="55" Height="55" Stroke="Black" StrokeThickness="2">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding PieceColor}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </UniformGrid>
            </Grid>
        </Border>

        <!-- Нижняя панель -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="← Главное меню" Click="Button_Click" 
                    Padding="20,10" FontSize="14" Margin="0,0,20,0" 
                    Background="LightCoral" Foreground="White"/>
            <StatusBar Height="35" Background="LightBlue">
                <StatusBarItem FontSize="13">
                    Выберите свою шашку → кликните на пустую диагональную клетку рядом
                </StatusBarItem>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
