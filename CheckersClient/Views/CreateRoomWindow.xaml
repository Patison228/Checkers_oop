<Window x:Class="CheckersClient.Views.CreateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Моя комната" Height="300" Width="400"
        Background="#34495E">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        
        <TextBlock Text="{Binding Status}" FontSize="16" TextWrapping="Wrap" Margin="0,20"
                   Foreground="White"/>
        
        <TextBlock Text="{Binding RoomId}" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"
                   Foreground="White"/>
        
        <TextBlock Text="Поделитесь этим ID со вторым игроком" 
                   FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
        
    </StackPanel>
</Window>
