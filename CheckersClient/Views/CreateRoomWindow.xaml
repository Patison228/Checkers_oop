<Window x:Class="CheckersClient.Views.CreateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание комнаты" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ваша комната создана!" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding RoomIdDisplay}" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Status}" FontSize="16" 
                       HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>

        <ProgressBar Grid.Row="2" IsIndeterminate="True" Height="10" Margin="0,20,0,0"/>
    </Grid>
</Window>
