<Window x:Class="CheckersClient.Views.JoinRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подключение к комнате" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Подключение к комнате" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="ID комнаты:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding RoomId}" FontSize="18" MaxLength="8"/>

            <TextBlock Text="Имя игрока:" FontWeight="Bold" Margin="0,20,0,5"/>
            <TextBox Text="{Binding PlayerName}" FontSize="16"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding Status}" FontSize="14" 
                   HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20"/>

        <Button Grid.Row="3" Content="Подключиться" Command="{Binding JoinCommand}"
                Width="150" Height="40" FontSize="16" HorizontalAlignment="Center"/>
    </Grid>
</Window>
