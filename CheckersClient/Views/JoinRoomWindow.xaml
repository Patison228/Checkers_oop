<Window x:Class="CheckersClient.Views.JoinRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подключиться" Height="300" Width="400"
        Background="#34495E">
    
    <StackPanel Margin="20">
        <TextBlock Text="{Binding Status}" FontSize="16" Margin="0,20"/>
        
        <TextBox Text="{Binding RoomId, UpdateSourceTrigger=PropertyChanged}" 
             FontSize="20" Margin="0,20" MaxLength="8"/>
        
        <Button Content="Подключиться" Height="50" FontSize="18" Margin="0,20"
            Click="JoinButton_Click"/>
        
    </StackPanel>
</Window>
