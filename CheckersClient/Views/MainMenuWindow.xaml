<Window x:Class="CheckersClient.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шашки Онлайн - Главное меню" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Шашки Онлайн" FontSize="36" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <Button Content="🎮 Создать комнату" 
                    Command="{Binding CreateRoomCommand}"
                    Width="250" Height="60" FontSize="18" Margin="0,0,0,20"/>

            <Button Content="🔗 Подключиться к комнате" 
                    Command="{Binding JoinRoomCommand}"
                    Width="250" Height="60" FontSize="18"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Сервер: https://localhost:7026" 
                   HorizontalAlignment="Center" Margin="0,20" FontSize="12" 
                   Foreground="Gray"/>
    </Grid>
</Window>
