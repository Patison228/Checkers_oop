<Window x:Class="CheckersClient.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шашки онлайн" Height="300" Width="400">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock Text="Шашки онлайн" FontSize="24" 
               HorizontalAlignment="Center" Margin="0,0,0,40"/>

        <Button Content="Создать комнату" Height="60" FontSize="18" Margin="0,10"
            Click="CreateRoom_Click"/>
        <Button Content="Подключиться к комнате" Height="60" FontSize="18" Margin="0,10"
            Click="JoinRoom_Click"/>
    </StackPanel>
</Window>